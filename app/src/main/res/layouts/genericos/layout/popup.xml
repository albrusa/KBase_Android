<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center"
    android:background="@color/wallet_holo_blue_light"
    tools:context="kumo.kbase_android.fragments.conversacionesList.ConversacionesListFragment">

    <ImageButton
        android:id="@+id/camera_btn_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/attach_camera" />


    <ImageButton
        android:id="@+id/galeria_btn_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageButton1"
        android:src="@drawable/attach_gallery" />

    <ImageButton
        android:id="@+id/archivos_btn_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_camera" />



</LinearLayout>