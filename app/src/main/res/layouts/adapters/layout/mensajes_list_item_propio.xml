<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10.0dip"
    android:minHeight="30.0dip"
    android:layout_alignParentRight="true">
        <FrameLayout android:id="@+id/web_page_preview_holder" android:paddingLeft="8.0dip" android:paddingTop="8.0dip" android:paddingRight="8.0dip" android:paddingBottom="4.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" />
         <TextView
            android:textSize="@dimen/conversation_text_row_tv"
            android:layout_gravity="left"
            android:id="@+id/Mensaje"
            android:text="aixo es un missatge"
            android:paddingLeft="8.0dip"
            android:paddingTop="2.0dip"
            android:paddingRight="8.0dip"
            android:paddingBottom="3.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_gravity="bottom|center|right"
            android:orientation="horizontal"
            android:id="@+id/date_wrapper"
            android:paddingRight="5.0dip"
            android:paddingBottom="1.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="right"
                android:layout_gravity="bottom|center|right"
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23:30"
                style="@style/ConversationDate" />
            <ImageView
                android:layout_gravity="bottom|center|right"
                android:id="@+id/status"
                android:paddingLeft="4.0dip"
                android:paddingBottom="3.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
</LinearLayout>
</RelativeLayout>

