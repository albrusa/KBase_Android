<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <!--ImageView
        android:layout_gravity="bottom|center|right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/balloon_outgoing_normal"/>-->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/main_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="30.0dip"
        android:layout_alignParentRight="true"
        style="@style/conversation_bubble_propio"
        android:background="@drawable/balloon_outgoing_normal_ext">
             <TextView
                android:textSize="@dimen/conversation_text_row_tv"
                android:layout_gravity="left"
                android:id="@+id/Mensaje"
                android:text="aixo es un missatge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:layout_gravity="bottom|center|right"
                android:orientation="horizontal"
                android:id="@+id/date_wrapper"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="right"
                    android:layout_gravity="bottom|center|right"
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23:30"
                    style="@style/ConversationDate" />
                <ImageView
                    android:layout_gravity="bottom|center|right"
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
    </LinearLayout>
</RelativeLayout>

