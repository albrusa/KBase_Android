<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/conversations_row_height"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">
    <FrameLayout
        android:id="@+id/contact_selector"
        android:paddingLeft="@dimen/list_row_padding"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/conversations_row_height"
        android:layout_alignParentLeft="true">

        <kumo.kbase_android.utils.CircularNetworkImageView
            android:id="@+id/Imagen"
            android:layout_width="@dimen/small_avatar_size"
            android:layout_height="@dimen/small_avatar_size"
            android:scaleType="fitCenter"
            android:layout_gravity="center|left"
            />
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="@dimen/list_row_padding"
        android:paddingRight="@dimen/list_row_padding"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact_selector"
        android:layout_centerVertical="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2.0dip">

            <FrameLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <TextView
                    android:layout_gravity="center|left"
                    android:id="@+id/Nombre_Usuario"
                    android:layout_width="wrap_content"
                    android:text="hola"
                    android:layout_height="wrap_content"
                    style="@style/ListItemTitle"/>
            </FrameLayout>
            <TextView
                android:textSize="@dimen/conversation_date_size"
                android:textColor="@color/gris_oscuro"
                android:ellipsize="end"
                android:gravity="right"
                android:text="23:13"
                android:layout_gravity="center_vertical"
                android:id="@+id/conversations_row_date"
                android:paddingLeft="4.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center|left"
                android:id="@+id/Mensaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ListItemSubtitle"/>
            <ImageView
                android:gravity="left"
                android:layout_gravity="center|left"
                android:id="@+id/media_indicator"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1.0dip"
                android:layout_marginRight="4.0dip"
                android:scaleType="fitStart" />
        </LinearLayout>

    </LinearLayout>

