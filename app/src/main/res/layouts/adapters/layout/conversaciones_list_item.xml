<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="72dp"
    android:background="?attr/selectableItemBackground"
    android:theme="@style/AppTheme.ItemList"
    android:orientation="horizontal">

    <kumo.kbase_android.utils.CircularNetworkImageView
        android:id="@+id/Imagen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        />

    <TextView android:id="@+id/Nombre_Usuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Imagen"
        android:layout_toLeftOf="@+id/Fecha"
        />

    <TextView android:id="@+id/Mensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:layout_below="@+id/Nombre_Usuario"
        android:layout_toRightOf="@+id/Imagen"
        android:layout_toLeftOf="@+id/Fecha"
        />

    <TextView android:id="@+id/Fecha"
        android:layout_width="72dp"
        android:layout_marginRight="16dp"
        android:layout_height="72dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="20:30"
        android:gravity="right"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>